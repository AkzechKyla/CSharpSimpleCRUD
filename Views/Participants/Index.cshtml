@model List<CSharpSimpleCRUD.Models.ParticipantModel>

@{
    ViewData["Title"] = "Participants";
}

<h1>Participants</h1>

<table class="table">
    <thead>
        <tr>
            <th>Participant ID</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Address</th>
            <th>Phone Number</th>
            <th>Email</th>
            <th>Birth Date</th>
            <th>Gender</th>
            <th>T-shirt Size</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var participant in Model)
        {
            <tr>
                <td>@participant.ParticipantId</td>
                <td>@participant.FirstName</td>
                <td>@participant.LastName</td>
                <td>@participant.Address</td>
                <td>@participant.PhoneNumber</td>
                <td>@participant.Email</td>
                <td>@participant.BirthDate.ToShortDateString()</td>
                <td>@participant.Gender</td>
                <td>@participant.TShirtSize</td>
            </tr>
        }
    </tbody>
</table>